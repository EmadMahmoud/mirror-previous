<%- include('includes/head.ejs') %>
    <%- include('includes/navigation.ejs') %>

        <main>
            <div class="container">
                <% for (c of categories ) { %>
                    <div class="row justify-content-center text-center mt-5">
                        <h1 class="col-6">
                            <%= c %>
                                <% let currentCategory=c; %>
                        </h1>
                        <ul class="col-8" style="list-style-type: none;">
                            <% for (thing of things ) { %>
                                <% if (thing.thingId.category===currentCategory ) { %>
                                    <li><a href="/thing-details/<%=thing.thingId._id%>"
                                            style="text-decoration: none; color: rgb(65, 111, 89);">
                                            <%= thing.thingId.name %>
                                        </a></li>
                                    <% } %>
                                        <% } %>

                        </ul>
                        <hr>
                    </div>
                    <% } %>
            </div>
        </main>

        <%- include('includes/end.ejs') %>