<%- include('../includes/head.ejs') %>

    <%- include('../includes/navigation.ejs') %>

        <main class="container">
            <% if (errorMessage.length> 0) { %>

                <div class="row justify-content-center text-center">
                    <p class="alert alert-info col-3" role="alert">
                        <%= errorMessage %>
                    </p>
                </div>

                <% } %>

                    <form action="/signup" method="post" class="needs-validation" novalidate>
                        <div class="row justify-content-center text-center mt-5">
                            <div class="col-5">
                                <div class="form-floating mb-3">
                                    <input type="email"
                                        class="form-control <%= validationErrors.find(e => e.path === 'email') ? 'invalid': '' %>"
                                        name="email" id="email" placeholder="Enter your email.."
                                        value="<%= oldInput.email %>">
                                    <label for="email">Email</label>
                                    <% if (validationErrors.find(e=> e.path === 'email')) { %>
                                        <% validationErrors.forEach(e=> {
                                            if(e.path === 'email') {
                                            emailError = e.msg;
                                            }
                                            }) %>
                                            <p style="font-size: 90%; color: brown;">
                                                <%= emailError %>
                                            </p>
                                            <% } %>
                                </div>

                                <div class="form-floating mb-3">
                                    <input type="password"
                                        class="form-control <%= validationErrors.find(e => e.path === 'password') ? 'invalid': '' %>"
                                        name="password" id="password" placeholder="password.."
                                        value="<%= oldInput.password %>">
                                    <label for="password">Password</label>
                                    <% if (validationErrors.find(e=> e.path === 'password')) { %>
                                        <% validationErrors.forEach(e=> {
                                            if(e.path === 'password') {
                                            passwordError = e.msg;
                                            }
                                            }) %>
                                            <p style="font-size: 90%; color: brown;">
                                                <%= passwordError %>
                                            </p>
                                            <% } %>
                                </div>

                                <div class="form-floating mb-3">
                                    <input type="password"
                                        class="form-control <%= validationErrors.find(e => e.path === 'confirmPassword') ? 'invalid': '' %>"
                                        name="confirmPassword" id="confirmPassword" placeholder="password.."
                                        value="<%= oldInput.confirmPassword %>">
                                    <label for="confirmPassword">ConfirmPassword</label>
                                    <% if (validationErrors.find(e=> e.path === 'confirmPassword')) { %>
                                        <% validationErrors.forEach(e=> {
                                            if(e.path === 'confirmPassword') {
                                            confirmError = e.msg;
                                            }
                                            }) %>
                                            <p style="font-size: 90%; color: brown;">
                                                <%= confirmError %>
                                            </p>
                                            <% } %>
                                </div>
                                <input type="hidden" name="CSRFToken" value="<%= csrfToken %>">
                                <button type="submit" class="btn btn-success">Signup</button>
                            </div>

                        </div>

                    </form>
        </main>


        <%- include('../includes/end.ejs') %>